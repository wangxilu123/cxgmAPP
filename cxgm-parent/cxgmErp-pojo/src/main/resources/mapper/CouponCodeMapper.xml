<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cxgm.dao.CouponCodeMapper">
  <resultMap id="BaseResultMap" type="com.cxgm.domain.CouponCode">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="user_id" jdbcType="BIGINT" property="userId" />
    <result column="code" jdbcType="VARCHAR" property="code" />
    <result column="coupon_id" jdbcType="BIGINT" property="couponId" />
    <result column="status" jdbcType="INTEGER" property="status" />
    <result column="used_date" jdbcType="TIMESTAMP" property="usedDate" />
    <result column="creation_date" jdbcType="TIMESTAMP" property="creationDate" />
    <result column="type" jdbcType="INTEGER" property="type" />
  </resultMap>
  <sql id="Base_Column_List">
    id, user_id, code, coupon_id, status, used_date, creation_date, type
  </sql>
   <sql id="queryMap">
		<if test="userId !=null and userId != ''">
    		and user_id=#{userId,jdbcType=BIGINT}
		</if>
		
		<if test="couponId !=null and couponId != ''">
    		and coupon_id=#{couponId,jdbcType=BIGINT}
		</if>
		
		<if test="status !=null and status != ''">
    		and status=#{status,jdbcType=INTEGER}
		</if>
		<if test="type !=null and type != ''">
    		and type=#{type,jdbcType=INTEGER}
		</if>
		<if test="code !=null and code != ''">
    		and code  like "%"#{code,jdbcType=VARCHAR}"%"
		</if>
	</sql>
  <select id="findCouponsWithParam" parameterType="map" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from coupon_code
    where 1=1
    <include refid="queryMap" />
  </select>
  <select id="select" parameterType="java.lang.Long" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from coupon_code
    where id = #{id,jdbcType=BIGINT}
  </select>
  <delete id="delete" parameterType="java.lang.Long">
    delete from coupon_code
    where id = #{id,jdbcType=BIGINT}
  </delete>
  <insert id="insert" parameterType="com.cxgm.domain.CouponCode">
    insert into coupon_code (id, user_id, code, 
      coupon_id, status, used_date, 
      creation_date, type)
    values (#{id,jdbcType=BIGINT}, #{userId,jdbcType=BIGINT}, #{code,jdbcType=VARCHAR}, 
      #{couponId,jdbcType=BIGINT}, #{status,jdbcType=INTEGER}, #{usedDate,jdbcType=TIMESTAMP}, 
      #{creationDate,jdbcType=TIMESTAMP}, #{type,jdbcType=INTEGER})
  </insert>
 
  <update id="updateByPrimaryKeySelective" parameterType="com.cxgm.domain.CouponCode">
    update coupon_code
    <set>
      <if test="userId != null">
        user_id = #{userId,jdbcType=BIGINT},
      </if>
      <if test="code != null">
        code = #{code,jdbcType=VARCHAR},
      </if>
      <if test="couponId != null">
        coupon_id = #{couponId,jdbcType=BIGINT},
      </if>
      <if test="status != null">
        status = #{status,jdbcType=INTEGER},
      </if>
      <if test="usedDate != null">
        used_date = #{usedDate,jdbcType=TIMESTAMP},
      </if>
      <if test="creationDate != null">
        creation_date = #{creationDate,jdbcType=TIMESTAMP},
      </if>
      <if test="type != null">
        type = #{type,jdbcType=INTEGER},
      </if>
    </set>
    where id = #{id,jdbcType=BIGINT}
  </update>
  
  <select id="findCouponsByUserId" parameterType="java.lang.Long" resultType="com.cxgm.domain.CouponDetail">
    select cu.`status`,co.`name`,co.introduction,co.begin_date as beginDate,co.end_date as endDate,co.product_category_id as categoryId,co.product_id as productId
    from coupon_code as cu left join coupon as co on cu.coupon_id=co.id where cu.user_id =#{userId,jdbcType=BIGINT}
  </select>
  
</mapper>